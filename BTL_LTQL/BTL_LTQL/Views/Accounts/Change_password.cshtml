@model BTL_LTQL.Models.Account
@{
    ViewBag.Title = "Change_password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="Reg-log-wrap">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="text" name="UserName" hidden value="@Model.UserName" />
    <input type="text" name="RoleID" hidden value="@Model.RoleID" />
    <input type="text" name="HoTen" hidden value="@Model.HoTen" />
    <input type="text" name="diachi" hidden value="@Model.diachi" />
    <input type="text" name="sodienthoai" hidden value="@Model.sodienthoai" />
    <label>Mật khẩu mới</label>
    <input type="password" name="Password" id="Password" value="" />
    <label>Nhập lại mật khẩu mới</label>
    <input type="password" name="ConfirmPassword" id="ConfirmPassword" value="" />
    <input type="submit" value="Lưu" class="text-white btn btn-round btn-danger text-white handle-btn" />
</div>
}
