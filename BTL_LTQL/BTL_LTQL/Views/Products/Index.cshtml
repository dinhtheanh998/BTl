@model IEnumerable<BTL_LTQL.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<section class="flat-row row-product-project style-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section margin-bottom-41">
                    <h2 class="title">Sản Phẩm</h2>
                </div>
                @*Tìm kiếm theo tên*@
                <div class="Reg-log-wrap">
                    @using (Html.BeginForm())
                    {

                        <p class="d-flex">
                            <input id="SearchString" name="SearchString" type="text" value="" placeholder="Nhập sản phẩm cần tìm" class="rounded">
                            <input type="submit" value="Tìm kiếm" class="text-white text-white btn btn-round btn-danger text-white" />
                            
                        </p>

                        @*<div class="d-flex align-items-center"> 
                            <input id="SearchString" name="SearchString" type="text" value="" placeholder="Nhập sản phẩm cần tìm">
                            <input type="submit" value="Tìm kiếm" class="text-white" style="padding: 10px 26px; " />
                        </div>*@

                    }
                </div> 
                <div class="divider h54"></div>
                <div class="d-flex Reg-log-wrap justify-content-between">
                    <form action="/Products/Menproduct" method="get">
                        <input type="submit" value="Nam" class="text-white btn btn-round btn-danger text-white" />
                    </form>
                    <form action="/Products/Womenproduct" method="get">
                        <input type="submit" value="Nữ" class="text-white btn btn-round btn-danger text-white" />
                    </form>
                    <form action="/Products/Kidproduct" method="get">
                        <input type="submit" value="Trẻ Em" class="text-white btn btn-round btn-danger text-white" />
                    </form>
                    <input type="button" value="Tất Cả" onclick="location.href = '@Url.Action("Index", "Products")'" class="text-white btn btn-round btn-danger text-white" />
                </div>
                <div class="divider h54"></div>
                <div class="product-content product-fourcolumn clearfix">
                    <ul class="product style2 isotope-product clearfix">
                        @foreach (var item in Model)
                        {

                            <li class="product-item kid woman">
                                <div class="product-thumb clearfix">
                                    <a href="/Products/Details/@item.ProductID">
                                        <img height="300" src=@item.ProductImageName alt="image" style="object-fit:cover">
                                    </a>
                                </div>
                                <div class="product-info clearfix">
                                    <span class="product-title">@item.ProductName</span>
                                    <div class="price">
                                        <ins>
                                            <span class="amount">@item.ProductPrice.ToString("#,##0") VND</span>
                                        </ins>
                                    </div>

                                </div>
                                <div class="add-to-cart text-center">
                                    @*@Html.ActionLink("Add to Cart", "OrderNow", "ShoppingCart", new { id = item.ProductID }, null)*@
                                    <a href="/ShoppingCart/AddtoCart/@item.ProductID" style="padding:15px 76px">Thêm Vào Giỏ</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


