@model BTL_LTQL.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admins/Views/Shared/Admin_LoaiSp.cshtml";
}

<h2 class="label-reg-log-text">Thêm Loại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="Reg-log-wrap">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.CategoryID, "Mã Loại",htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control text-dark" } })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

                @Html.LabelFor(model => model.CategoryName,"Tên Loại" ,htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control text-dark" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <a class="btn btn-primary mr-xl-auto" href="/Admins/ProductsAdmin/Index">Quay Lại</a>
                    <input type="submit" value="Create" class="text-white btn btn-round btn-danger text-white handle-btn" />
                </div>
            </div>
        </div>
    </div>
}

