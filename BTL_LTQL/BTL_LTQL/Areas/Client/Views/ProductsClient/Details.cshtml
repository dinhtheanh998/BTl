@model BTL_LTQL.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}


<div class="mt-5">

</div>

<div class="container bootdey">
    <div class="col-md-12">
        <section class="panel">
            <div class="panel-body d-flex">
                <div class="col-md-6">
                    <div class="pro-img-details">
                        <img src="@Model.ProductImageName" alt="" class="img-fluid" style="height:540px">
                    </div>
                </div>
                <div class="col-md-6">
                    <h4 class="pro-d-title">
                        <a href="#" class="text-uppercase" style="font-size : 1.7rem; color:orangered">
                            @Model.ProductName
                        </a>
                    </h4>
                    <p>
                        @Model.ProductDescription
                    </p>
                    <div class="product_meta">
                        <span class="posted_in"> <span>Loại :</span> <span>@Model.Categories.CategoryName</span></span>
                    </div>
                    <div class="m-bot15"> <span>Giá :</span> <span class="pro-price" style="color:orangered">@Model.ProductPrice</span></div>



                    <p class="mt-3 mb-3">
                        <a href="/ShoppingCart/AddtoCart/@Model.ProductID"><input class="btn btn-round btn-danger text-white" type="submit" value="Thêm Vào Giỏ" /></a>

                    </p>

                    <a href="/ProductsClient/Index" class="">Quay lại</a>
                </div>
            </div>
        </section>
    </div>
</div>